<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.jhta.mybatis.mapper.hjy.CommentsMapperHjy">
  	<select id="list" resultType="com.jhta.project.vo.hjy.CommentsVo" parameterType="int">
  		select * from
		(select c.*,rownum rnum from 
		(select * from comments whrere bid = #{bid} order by cref desc,cstep asc) c);
  	</select>
  	<!-- 댓글개수 세는 쿼리 -->
  	<insert id="insert" parameterType="com.jhta.project.vo.hjy.CommentsVo">
  		insert into comments values
  		(seq_comments.nextval,#{ccontent},sysdate,seq_comments.currval,#{cstep},#{clev},#{bid},#{mid})
  	</insert>
  	<insert id="insertPlus" parameterType="com.jhta.project.vo.hjy.CommentsVo">
  		insert into comments values
  		(seq_comments.nextval,#{ccontent},sysdate,#{cref},#{cstep},#{clev},#{bid},#{mid})
  	</insert>
  	<update id="update" parameterType="int">
  		update comments set cstep = cstep+1 where cstep>${cstep}
  	</update>
  </mapper>