<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.jhta.mybatis.mapper.hjy.CommentsMapperHjy">
  	<select id="list" resultType="com.jhta.project.vo.hjy.CommentsVo" parameterType="int">
  		select c.*,rownum rnum from 
		(select * from comments where bid = #{bid} order by cref asc,cstep asc) c
  	</select>
  	<select id="commcnt" resultType="int" parameterType="int">
	  	select count(bid) cnt, bid from comments where bid=#{bid} group by bid
  	</select>
  	<select id="find" resultType="com.jhta.project.vo.hjy.CommentsVo" parameterType="int">
  		select * from comments where cid = #{cid}
  	</select>
  	<!-- 댓글개수 세는 쿼리 -->
  	<insert id="insert" parameterType="com.jhta.project.vo.hjy.CommentsVo">
  		insert into comments values
  		(seq_comments.nextval,#{ccontent},sysdate,seq_comments.currval,#{cstep},#{clev},#{bid},#{mid})
  	</insert>
  	<insert id="insertPlus" parameterType="com.jhta.project.vo.hjy.CommentsVo">
  		insert into comments values
  		(seq_comments.nextval,#{ccontent},sysdate,#{cref},#{cstep},#{clev},#{bid},#{mid})
  	</insert>
  	<update id="update" parameterType="hashmap">
  		update comments set cstep = cstep+1 where cstep>=${cstep} and cid not in (#{cid})
  	</update>
  	<update id="upcateCcontent" parameterType="hashmap">
  		update comments set ccontent=#{ccontent} where cid=#{cid} 
  	</update>
  	<delete id="deleteComment" parameterType="int">
  		delete comments where cref=#{cref} and clev>#{clev}
  	</delete>
  	<select id="seq" resultType="int">
  		select seq_comments.currval from dual 
  	</select>
  </mapper>